<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="domain.Artist"
           table="artist">
        <id name="id" column="id">
            <generator class="increment"/>
        </id>
        <property
                name="name"
                column="name"/>
        <property
                name="genre"
                column="genre"/>
    </class>
</hibernate-mapping>